<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:orientation="vertical" >

    <TextView
        android:id="@+id/subheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#444444"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="0dp"
        android:paddingBottom="10dp"
        android:text="HAMMER Software Modem"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Select a CoT marker from the list  below to send, or click on a CoT marker on the map, and send via the hammer icon on the  radial menu." />

    <ScrollView
        android:id="@+id/weather_table_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/subheader"
        android:layout_marginTop="0dp">
        <GridLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true"></GridLayout>
    </ScrollView>

    <Switch
        android:text="Enable Receive"
        android:id="@+id/enableReceiveCoTFromModem"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:checked="true"/>

</LinearLayout>
